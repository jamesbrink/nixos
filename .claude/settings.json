{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "MCP_TOOL_TIMEOUT": "150000",
    "ANTHROPIC_LOG": "info"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Glob",
      "Grep",
      "LS",
      "Read",
      "mcp__*",
      "MultiEdit",
      "Task",
      "WebFetch",
      "WebSearch",
      "Write"
    ],
    "deny": ["Bash(rm:-rf /)"],
    "defaultMode": "acceptEdits",
    "additionalDirectories": ["../nix-secrets"]
  },
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["nixos"],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "nixfmt ${CLAUDE_FILE_PATHS} 2>/dev/null || true",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
