#!/usr/bin/env bash
# Show active connections on PostgreSQL 17 replica on hal9000
set -euo pipefail

ssh hal9000 "sudo -u postgres psql -h localhost -p 5439 -c \"SELECT datname, usename, client_addr, state, query_start, LEFT(query, 60) as query FROM pg_stat_activity WHERE state != 'idle' ORDER BY query_start;\""
